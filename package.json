{
  "name": "@radioterio/root",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "predev": "npm run build:deps",
    "dev": "concurrently -n api,playback,frontend,events -c blue,green,yellow,magenta \"npm run dev:api\" \"npm run dev:playback\" \"npm run dev:frontend\" \"npm run dev:events\"",
    "dev:api": "npm run dev -w @radioterio/api-server",
    "dev:playback": "npm run dev -w @radioterio/playback-server",
    "dev:frontend": "npm run dev -w @radioterio/frontend",
    "dev:events": "npm run dev -w @radioterio/events-server",
    "build:deps": "npm run build -w @radioterio/common",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "typescript-eslint": "^8.45.0"
  },
  "version": "0.1.0"
}